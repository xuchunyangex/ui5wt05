<mvc:View controllerName="wt05Controllers.controller.App" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m">
    <App class="myAppDemoWT">
        <!-- pages aggregation is from sap.m.NavContainer (father of App) -->
        <pages>
            <Page title="{i18n>homePageTitle}">
                <headerContent>
                    <Button icon="sap-icon://hello-world" press="onOpenDialog" />
                  </headerContent>
                <content>
                    <mvc:XMLView viewName="wt05Controllers.view.HelloPanel" />
                    <!-- walkthrough 20 - aggregation binding -->
                    <mvc:XMLView viewName="wt05Controllers.view.InvoiceList" />
                </content>
            </Page>
        </pages>
    </App>
</mvc:View>
